@model Da3wa.Domain.Entities.Event
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Event";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0">Create Event</h4>
                <p class="text-muted mb-0">Add a new event to the system</p>
            </div>
            <a href="@Url.Action("Index", "Event")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="card-title mb-0">Event Information</h5>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Event Name <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Type" class="form-label">Type</label>
                            <input asp-for="Type" class="form-control">
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryId" class="form-label">Category</label>
                            @Html.DropDownList("CategoryId", ViewData["Categories"] as SelectList, "Select Category", new { @class = "form-control" })
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CityId" class="form-label">City</label>
                            @Html.DropDownList("CityId", ViewData["Cities"] as SelectList, "Select City", new { @class = "form-control" })
                            <span asp-validation-for="CityId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="invitationImage" class="form-label">Invitation Background Image</label>
                        <input type="file" class="form-control" id="invitationImage" name="invitationImage" accept="image/*">
                        <small class="form-text text-muted">Upload the background invitation image. QR codes will be added to this image when creating guests.</small>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-admin">
                            <i class="fas fa-save me-2"></i>Create Event
                        </button>
                        <a href="@Url.Action("Index", "Event")" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

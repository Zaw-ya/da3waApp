<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DA3WA</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Da3wa.WebUI.styles.css" asp-append-version="true" />

    <style>
        :root {
            --primary-color: #8B7355; /* Light coffee brown */
            --secondary-color: #D2B48C; /* Tan/light coffee */
            --accent-color: #A0522D; /* Sienna brown */
            --light-color: #FAF3E0; /* Cream/off-white */
            --dark-color: #5D4037; /* Dark brown */
            --gray-color: #8D6E63; /* Medium brown */
            --success-color: #8FBC8F; /* Sage green */
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
        }

        body {
            font-family: 'Poppins', sans-serif;
            color: var(--dark-color);
            line-height: 1.6;
            overflow-x: hidden;
            background-color: var(--light-color);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Montserrat', sans-serif;
            font-weight: 600;
        }

        /* Main content wrapper to push footer down */
        .main-wrapper {
            flex: 1 0 auto;
            width: 100%;
        }

        /* Modern Navbar */
        .navbar {
            padding: 20px 0;
            background-color: rgba(250, 243, 224, 0.95);
            box-shadow: 0 2px 15px rgba(93, 64, 55, 0.08);
            transition: var(--transition);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.8rem;
            color: var(--primary-color) !important;
            display: flex;
            align-items: center;
        }

            .navbar-brand span {
                color: var(--accent-color);
            }

            .navbar-brand i {
                margin-right: 8px;
                font-size: 1.5rem;
            }

        .nav-link {
            font-weight: 500;
            margin: 0 5px;
            color: var(--dark-color) !important;
            transition: var(--transition);
            position: relative;
        }

            .nav-link:hover, .nav-link.active {
                color: var(--accent-color) !important;
            }

            .nav-link:after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
                bottom: 0;
                left: 0;
                transition: var(--transition);
            }

            .nav-link:hover:after, .nav-link.active:after {
                width: 100%;
            }

        .btn-gradient {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border: none;
            color: white !important;
            padding: 10px 25px;
            border-radius: 50px;
            font-weight: 500;
            transition: var(--transition);
            box-shadow: 0 4px 15px rgba(139, 115, 85, 0.2);
        }

            .btn-gradient:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(139, 115, 85, 0.3);
                color: white !important;
                background: linear-gradient(135deg, var(--accent-color), var(--primary-color));
            }

        .btn-outline-light {
            border: 2px solid white;
            color: white;
            background: transparent;
            padding: 10px 25px;
            border-radius: 50px;
            font-weight: 500;
            transition: var(--transition);
        }

            .btn-outline-light:hover {
                background: white;
                color: var(--primary-color) !important;
            }

        /* Coffee Background Text */
        .bg-coffee, .coffee-bg {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white !important;
        }

            .bg-coffee h1, .bg-coffee h2, .bg-coffee h3, .bg-coffee h4,
            .bg-coffee h5, .bg-coffee h6, .bg-coffee p, .bg-coffee span,
            .bg-coffee a, .bg-coffee li, .bg-coffee i,
            .coffee-bg h1, .coffee-bg h2, .coffee-bg h3, .coffee-bg h4,
            .coffee-bg h5, .coffee-bg h6, .coffee-bg p, .coffee-bg span,
            .coffee-bg a, .coffee-bg li, .coffee-bg i {
                color: white !important;
            }

                .bg-coffee a:hover, .coffee-bg a:hover {
                    opacity: 0.9;
                    color: rgba(255, 255, 255, 0.9) !important;
                }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: 150px 0 100px;
            position: relative;
            overflow: hidden;
        }

            .hero-section:before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none"><path d="M1200 120L0 16.48 0 0 1200 0 1200 120z" fill="%23faf3e0"/></svg>');
                background-repeat: no-repeat;
                background-size: 100% 100px;
                background-position: bottom;
            }

        .hero-content h1 {
            font-size: 3.2rem;
            margin-bottom: 1.5rem;
            line-height: 1.2;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
        }

        .hero-content p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.95;
        }

        .hero-image {
            position: relative;
            animation: float 6s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        /* Section Styling */
        .section-title {
            text-align: center;
            margin-bottom: 3rem;
            position: relative;
        }

            .section-title h2 {
                font-size: 2.5rem;
                color: var(--primary-color);
                display: inline-block;
                padding-bottom: 15px;
                position: relative;
                margin-bottom: 1rem;
            }

                .section-title h2:after {
                    content: '';
                    position: absolute;
                    width: 70px;
                    height: 4px;
                    background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
                    bottom: 0;
                    left: 50%;
                    transform: translateX(-50%);
                    border-radius: 2px;
                }

            .section-title p {
                color: var(--gray-color);
                max-width: 700px;
                margin: 0 auto;
            }

        /* Feature Cards */
        .feature-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(141, 110, 99, 0.05);
            transition: var(--transition);
            height: 100%;
            text-align: center;
            border-top: 5px solid transparent;
        }

            .feature-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 35px rgba(141, 110, 99, 0.1);
                border-top: 5px solid var(--primary-color);
            }

        .feature-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
        }

            .feature-icon i {
                font-size: 2rem;
                color: white;
            }

       .footer {
  background: var(--dark-color);
  color: white;
  padding: 70px 0 20px;
  flex-shrink: 0;
  width: 100%;
  margin-top: auto;
  overflow-x: hidden; /* إضافة */
}

.footer .container {
  max-width: 100%; /* إضافة */
}

.footer-logo {
  font-size: 1.8rem;
  font-weight: 700;
  margin-bottom: 20px;
  color: white;
}

.footer-logo span {
  color: var(--secondary-color);
}

.footer p {
  color: #E0D1C3;
  margin-bottom: 20px;
  word-wrap: break-word; /* إضافة */
}

.footer-links h5 {
  font-size: 1.2rem;
  margin-bottom: 20px;
  position: relative;
  padding-bottom: 10px;
  color: var(--secondary-color);
}

.footer-links h5:after {
  content: '';
  left: 0;
  bottom: 0;
  width: 40px;
  height: 3px;
  background: var(--secondary-color);
}

.footer-links ul {
  list-style: none;
  padding: 0;
}

.footer-links li {
  margin-bottom: 10px;
  word-wrap: break-word; /* إضافة */
  overflow-wrap: break-word; /* إضافة */
  word-break: break-word; /* إضافة */
}

.footer-links a {
  color: #E0D1C3;
  text-decoration: none;
  transition: var(--transition);
  word-wrap: break-word; /* إضافة */
  overflow-wrap: break-word; /* إضافة */
  word-break: break-word; /* إضافة */
}

.footer-links a:hover {
  color: var(--secondary-color);
  padding-left: 5px;
}


        .social-links {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

            .social-links a {
                width: 40px;
                height: 40px;
                background-color: rgba(210, 180, 140, 0.2);
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                color: var(--secondary-color);
                transition: var(--transition);
            }

                .social-links a:hover {
                    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
                    color: white;
                    transform: translateY(-3px);
                }

        .copyright {
            text-align: center;
            padding-top: 30px;
            margin-top: 50px;
            border-top: 1px solid rgba(210, 180, 140, 0.3);
            color: #E0D1C3;
            font-size: 0.9rem;
        }

            .copyright a {
                color: var(--secondary-color);
                text-decoration: none;
            }

                .copyright a:hover {
                    text-decoration: underline;
                }

        /* Content Sections */
        .content-section {
            padding: 80px 0;
            background-color: white;
        }

        .bg-light-section {
            background-color: var(--light-color);
        }

        /* Fix for coffee background elements */
        .bg-coffee .section-title h2,
        .coffee-bg .section-title h2 {
            color: white !important;
        }

            .bg-coffee .section-title h2:after,
            .coffee-bg .section-title h2:after {
                background: white !important;
            }

        .bg-coffee .section-title p,
        .coffee-bg .section-title p {
            color: rgba(255, 255, 255, 0.9) !important;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .hero-content h1 {
                font-size: 2.5rem;
            }

            .navbar-collapse {
                background: var(--light-color);
                padding: 20px;
                border-radius: 10px;
                box-shadow: 0 10px 30px rgba(93, 64, 55, 0.1);
                margin-top: 10px;
            }
        }

        @@media (max-width: 768px) {
            .hero-section {
                padding: 120px 0 60px;
            }

            .hero-content h1 {
                font-size: 2rem;
            }

            .section-title h2 {
                font-size: 2rem;
            }

            .content-section {
                padding: 60px 0;
            }

            .footer {
                padding: 50px 0 20px;
            }
        }

        @@media (max-width: 576px) {
            .hero-content h1 {
                font-size: 1.8rem;
            }

            .footer {
                text-align: center;
                padding: 40px 0 20px;
            }

            .footer-links h5:after {
                left: 50%;
                transform: translateX(-50%);
            }

            .social-links {
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-calendar-alt"></i>Dioufy
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#features">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <partial name="_LoginPartial" />
                        <li class="nav-item ms-2">
                            <a class="btn btn-gradient" href="#contact">Get Started</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <br/><br/>

    <div class="main-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer class="footer" style="position:unset">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <a href="#" class="footer-logo d-block mb-3 text-white">DA3WA<span>Pro</span></a>
                    <p>DA3WA is service that will help you to share</p>
        
                    <div class="social-links">
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <div class="footer-links">
                        <h5>Quick Links</h5>
                        <ul>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a href="#features">Features</a></li>
                            <li><a href="#services">Services</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="footer-links">
                        <h5>Services</h5>
                        <ul>
                            <li><a href="#services">Wedding Ceremony</a></li>
                            <li><a href="#services">Engagement</a></li>
                            <li><a href="#services">Birthday Parties</a></li>
                            <li><a href="#services">Corporate Events</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="footer-links">
                        <h5>Contact Us</h5>
                        <ul>
                            <li><i class="fas fa-map-marker-alt me-2"></i> Riyadh, Saudi Arabia</li>
                            <li><i class="fas fa-phone me-2"></i> +966 58299 1740</li>
                            <li><i class="fas fa-envelope me-2"></i> cs@DA3WA.org</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="copyright">
                <p>&copy; @DateTime.Now.Year - DA3WA - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Navbar scroll effect
        $(window).scroll(function () {
            if ($(window).scrollTop() > 50) {
                $('.navbar').css({
                    'backgroundColor': 'rgba(250, 243, 224, 0.98)',
                    'boxShadow': '0 5px 20px rgba(93, 64, 55, 0.1)'
                });
            } else {
                $('.navbar').css({
                    'backgroundColor': 'rgba(250, 243, 224, 0.95)',
                    'boxShadow': '0 2px 15px rgba(93, 64, 55, 0.08)'
                });
            }
        });

        // Smooth scrolling for anchor links
        $(document).on('click', 'a[href^="#"]', function (e) {
            var target = $(this.getAttribute('href'));
            if (target.length) {
                e.preventDefault();
                $('html, body').stop().animate({
                    scrollTop: target.offset().top - 80
                }, 1000);
            }
        });

        // Update active nav link on scroll
        $(window).on('scroll', function () {
            var scrollPos = $(document).scrollTop() + 100;
            $('a.nav-link').each(function () {
                var currLink = $(this);
                var refElement = $(currLink.attr("href"));
                if (refElement.length && refElement.position().top <= scrollPos && refElement.position().top + refElement.height() > scrollPos) {
                    $('a.nav-link').removeClass("active");
                    currLink.addClass("active");
                }
            });
        });

        // Form submission handler
        $(document).ready(function () {
            $('#contactForm').on('submit', function (e) {
                e.preventDefault();

                var name = $('#name').val();
                var email = $('#email').val();
                var subject = $('#subject').val();
                var message = $('#message').val();

                if (name && email && subject && message) {
                    alert('Thank you for contacting us! We will get back to you soon.');
                    $('#contactForm')[0].reset();
                } else {
                    alert('Please fill in all required fields.');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
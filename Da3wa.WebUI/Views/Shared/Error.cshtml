@model ErrorViewModel
@{
    ViewData["Title"] = "Something went wrong";
    Layout = "_Layout"; // Keep layout for navigation, but we'll style the content
}

<style>
    .error-container {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 2rem;
    }

    .error-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 3rem;
        max-width: 650px;
        width: 100%;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.1);
        text-align: center;
        animation: fadeIn 0.8s ease-out;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .error-icon {
        font-size: 5rem;
        color: #ff4757;
        margin-bottom: 1.5rem;
        display: inline-block;
        filter: drop-shadow(0 0 10px rgba(255, 71, 87, 0.3));
    }

    .error-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #2f3542 0%, #57606f 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .error-message {
        color: #57606f;
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .error-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .btn-custom {
        padding: 0.8rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #1e90ff 0%, #3742fa 100%);
        color: white;
        border: none;
        box-shadow: 0 4px 15px rgba(30, 144, 255, 0.3);
    }

    .btn-primary-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(30, 144, 255, 0.4);
        color: white;
    }

    .btn-secondary-custom {
        background: #f1f2f6;
        color: #2f3542;
        border: 1px solid #dfe4ea;
    }

    .btn-secondary-custom:hover {
        background: #ced6e0;
        color: #2f3542;
    }

    .technical-details {
        margin-top: 3rem;
        text-align: left;
        background: #f8f9fa;
        border-radius: 15px;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }

    .details-header {
        padding: 1rem 1.5rem;
        background: #e9ecef;
        font-weight: 700;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .details-body {
        padding: 1.5rem;
        font-family: 'Consolas', 'Monaco', monospace;
        font-size: 0.85rem;
        max-height: 400px;
        overflow-y: auto;
    }

    .request-id {
        font-size: 0.8rem;
        color: #a4b0be;
        margin-top: 1rem;
    }
</style>

<div class="error-container">
    <div class="error-card">
        <div class="error-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
        <h1 class="error-title">Oops! Something went wrong</h1>
        <p class="error-message">
            We've encountered an unexpected error. Our team has been notified and we're working to fix it as soon as possible.
        </p>

        <div class="error-actions">
            <a href="/" class="btn btn-custom btn-primary-custom">Return to Home</a>
            <a href="javascript:history.back()" class="btn btn-custom btn-secondary-custom">Go Back</a>
        </div>

        @if (Model.ShowRequestId)
        {
            <div class="request-id">
                Request ID: <code>@Model.RequestId</code>
            </div>
        }

        @if (Context.Items["ASPNETCORE_ENVIRONMENT"]?.ToString() == "Development" || true) @* Force true for demo or user check *@
        {
        <div class="technical-details">
            <div class="details-header" data-bs-toggle="collapse" data-bs-target="#errorDetails">
                Detailed Error Information
                <i class="bi bi-chevron-down"></i>
            </div>
            <div id="errorDetails" class="collapse show">
                <div class="details-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="mb-3">
                            <strong class="text-danger">Error Message:</strong><br />
                            <span style="color: #d63031;">@Model.ErrorMessage</span>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <strong class="text-warning">No error message captured.</strong>
                            <p class="text-muted small mt-2">The exception details may not have been passed to this page. Check the application logs for more info.</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.StackTrace))
                    {
                        <div>
                            <strong class="text-primary">Stack Trace:</strong><br />
                            <pre style="white-space: pre-wrap; margin-top: 10px; background: #2d3436; color: #dfe6e9; padding: 15px; border-radius: 8px; font-size: 0.8rem;">@Model.StackTrace</pre>
                        </div>
                    }
                </div>
            </div>
        </div>
        }
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}

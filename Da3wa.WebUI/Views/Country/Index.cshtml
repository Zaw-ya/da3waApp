@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Countries";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0">Countries</h4>
                <p class="text-muted mb-0">Manage countries in the system</p>
            </div>
            <a href="@Url.Action("Create", "Country")" class="btn btn-admin">
                <i class="fas fa-plus me-2"></i>Add Country
            </a>
        </div>
    </div>
</div>

<!-- Countries Table -->
<div class="row">
    <div class="col-12">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="card-title mb-0">Countries List</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Country Name</th>
                                <th>Status</th>
                                <th>Created On</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var country in Model)
                            {
                                <tr>
                                    <td>@country.CountryName</td>
                                    <td>
                                        @if (country.IsDeleted)
                                        {
                                            <span class="badge bg-danger">Deleted</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                    </td>
                                    <td>@country.CreatedOn.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Edit", "Country", new { id = country.Id })" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="@Url.Action("DeleteConfirmed", "Country")" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@country.Id" />
                                                @if (!country.IsDeleted)
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-warning" onclick="return confirm('Are you sure you want to delete this country?')">
                                                        <i class="fas fa-toggle-off"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-success" onclick="return confirm('Are you sure you want to restore this country?')">
                                                        <i class="fas fa-toggle-on"></i>
                                                    </button>
                                                }
                                        </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any custom JavaScript here
        });
    </script>
}

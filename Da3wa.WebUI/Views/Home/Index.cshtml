@{
    ViewData["Title"] = "DA3WA - Smart Event Invitations";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-1 order-2">
                <div class="hero-content animate__animated animate__fadeInLeft">
                    <h1>We are best on serving your guest</h1>
                    <p>DA3WA is service that will help you to share, automate and socialize your invitation in convenient and simple way. DA3WA is a marketplace where you can customized your templates, add your guest details and share it with your invitees.</p>
                    <div class="d-flex gap-3 flex-wrap">
                        <a href="#features" class="btn btn-gradient">Explore Features</a>
                        <a href="#contact" class="btn btn-outline-light">Contact Us</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 order-lg-2 order-1 mb-4 mb-lg-0">
                <div class="hero-image text-center">
                    <img src="https://cdn.pixabay.com/photo/2018/05/08/21/29/event-3383938_1280.png" alt="Event Management" class="img-fluid" style="max-height: 500px;">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container py-5">
        <div class="section-title">
            <h2>Why Choose DA3WA?</h2>
            <p>We provide innovative solutions to manage and organize your events professionally and easily</p>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-qrcode"></i>
                    </div>
                    <h4>QR Code Integration</h4>
                    <p>Incorporate QR Codes into your event planning and marketing strategy to simplify processes and reach a wider target audience.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-user-friends"></i>
                    </div>
                    <h4>Guest Tracking</h4>
                    <p>We are not just designing your card but also make sure your event is fully automated to capture your guest details and track them in real-time.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-cogs"></i>
                    </div>
                    <h4>Simplified Process</h4>
                    <p>Our system is simple and easy to use, allowing you to manage your events with ease and flexibility while saving time and effort.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="py-5 bg-light">
    <div class="container py-5">
        <div class="section-title">
            <h2>Our Services</h2>
            <p>We manage all kind of events with professionalism and creativity</p>
        </div>

        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-ring"></i>
                    </div>
                    <h4>Wedding Ceremony</h4>
                    <p>Beautiful wedding invitations with guest tracking and automated reminders.</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <h4>Engagement</h4>
                    <p>Unique engagement party invitations with customizable designs.</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-birthday-cake"></i>
                    </div>
                    <h4>Birthday Parties</h4>
                    <p>Creative birthday invitations with photo customization options.</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <h4>Corporate Events</h4>
                    <p>Professional invitations for corporate events, meetings, and seminars.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-5">
    <div class="container py-5">
        <div class="section-title">
            <h2>Contact Us</h2>
            <p>We're here to help you organize your next event. Contact us today!</p>
        </div>

        <div class="row contact-info mb-5">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <h4>Address</h4>
                    <p>Riyadh, Saudi Arabia</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <h4>Phone Number</h4>
                    <p><a href="tel:+966582991740">+966 58299 1740</a></p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <h4>Email</h4>
                    <p><a href="mailto:cs@DA3WA.org">cs@DA3WA.org</a></p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="feature-card">
                    <form id="contactForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <input type="text" class="form-control" id="name" placeholder="Your Name" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <input type="email" class="form-control" id="email" placeholder="Your Email" required>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control" id="subject" placeholder="Subject" required>
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" id="message" rows="5" placeholder="Message" required></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-gradient">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Recent Events & Activity -->
<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="admin-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Recent Events</h5>
                <a href="@Url.Action("Index", "Event")" class="text-primary">View All</a>
            </div>
            <div class="card-body">
                @if (Model.RecentEvents.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Event Name</th>
                                    <th>Date</th>
                                    <th>Location</th>
                                    <th>Type</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var eventItem in Model.RecentEvents)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="event-icon me-3">
                                                    <i class="fas fa-calendar-alt"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@eventItem.Name</h6>
                                                    @if (!string.IsNullOrEmpty(eventItem.Bridegroom) && !string.IsNullOrEmpty(eventItem.Bride))
                                                    {
                                                        <small class="text-muted">@eventItem.Bridegroom & @eventItem.Bride</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (eventItem.StartDate.HasValue)
                                            {
                                                @eventItem.StartDate.Value.ToString("MMM dd, yyyy")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not set</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(eventItem.Location))
                                            {
                                                <span>@eventItem.Location</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(eventItem.Type))
                                            {
                                                <span class="badge bg-primary">@eventItem.Type</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">General</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Event", new { id = eventItem.Id })" class="btn btn-sm btn-outline-admin">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No events created yet</p>
                        <a href="@Url.Action("Create", "Event")" class="btn btn-admin mt-2">
                            <i class="fas fa-plus me-2"></i>Create Your First Event
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-4">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="card-title mb-0">Recent Guests</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentGuests.Any())
                {
                    <div class="activity-timeline">
                        @foreach (var guest in Model.RecentGuests)
                        {
                            <div class="activity-item">
                                <div class="activity-icon @(guest.IsAttending ? "bg-success" : "bg-warning")">
                                    <i class="fas @(guest.IsAttending ? "fa-user-check" : "fa-user-clock")"></i>
                                </div>
                                <div class="activity-content">
                                    <h6>@guest.FullName</h6>
                                    <p class="text-muted mb-0">
                                        <i class="fas fa-phone me-1"></i>@(guest.Tel.Any() ? string.Join(", ", guest.Tel) : "No phone")
                                    </p>
                                    <small class="text-muted">
                                        @if (guest.IsAttending)
                                        {
                                            <span class="text-success"><i class="fas fa-check-circle"></i> Confirmed</span>
                                        }
                                        else
                                        {
                                            <span class="text-warning"><i class="fas fa-clock"></i> Pending</span>
                                        }
                                        - @guest.CreatedOn.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="text-center mt-3">
                        <a href="@Url.Action("Index", "Guest")" class="btn btn-sm btn-outline-admin">View All Guests</a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No guests yet</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Upcoming Events -->
<div class="row">
    <div class="col-12">
        <div class="admin-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Upcoming Events</h5>
                <a href="@Url.Action("Index", "Event")" class="text-primary">View All</a>
            </div>
            <div class="card-body">
                @if (Model.UpcomingEventsList.Any())
                {
                    <div class="row">
                        @{
                            var colors = new[] { "primary", "success", "info", "warning", "purple", "pink" };
                            var colorIndex = 0;
                        }
                        @foreach (var upcomingEvent in Model.UpcomingEventsList)
                        {
                            var color = colors[colorIndex % colors.Length];
                            colorIndex++;

                            <div class="col-md-4 mb-3">
                                <div class="upcoming-event-card">
                                    @if (upcomingEvent.StartDate.HasValue)
                                    {
                                        <div class="event-date bg-@color text-white">
                                            <div class="day">@upcomingEvent.StartDate.Value.Day</div>
                                            <div class="month">@upcomingEvent.StartDate.Value.ToString("MMM").ToUpper()</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="event-date bg-secondary text-white">
                                            <div class="day"><i class="fas fa-calendar"></i></div>
                                            <div class="month">TBD</div>
                                        </div>
                                    }
                                    <div class="event-details">
                                        <h6>@upcomingEvent.Name</h6>
                                        @if (upcomingEvent.AttendTime.HasValue)
                                        {
                                            <p class="text-muted mb-2">
                                                <i class="fas fa-clock me-2"></i>@upcomingEvent.AttendTime.Value.ToString("hh:mm tt")
                                            </p>
                                        }
                                        <p class="text-muted mb-0">
                                            <i class="fas fa-map-marker-alt me-2"></i>
                                            @if (!string.IsNullOrEmpty(upcomingEvent.Venue))
                                            {
                                                @upcomingEvent.Venue
                                            }
                                            else if (!string.IsNullOrEmpty(upcomingEvent.Location))
                                            {
                                                @upcomingEvent.Location
                                            }
                                            else
                                            {
                                                <span>Location not set</span>
                                            }
                                        </p>
                                    </div>
                                    <div class="event-status">
                                        @if (!string.IsNullOrEmpty(upcomingEvent.Type))
                                        {
                                            <span class="badge bg-@color">@upcomingEvent.Type</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Event</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-calendar-plus fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No upcoming events scheduled</p>
                        <a href="@Url.Action("Create", "Event")" class="btn btn-admin mt-2">
                            <i class="fas fa-plus me-2"></i>Schedule New Event
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .event-icon {
        width: 40px;
        height: 40px;
        background: rgba(139, 115, 85, 0.1);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary-color);
    }

    .activity-item {
        display: flex;
        margin-bottom: 20px;
        position: relative;
    }

        .activity-item:before {
            content: '';
            position: absolute;
            left: 20px;
            top: 40px;
            bottom: -20px;
            width: 2px;
            background: #eee;
        }

        .activity-item:last-child:before {
            display: none;
        }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        margin-right: 15px;
        z-index: 1;
    }

    .activity-content {
        flex: 1;
    }

    .upcoming-event-card {
        display: flex;
        align-items: center;
        background: white;
        padding: 15px;
        border-radius: 10px;
        border: 1px solid #eee;
        transition: var(--transition);
    }

        .upcoming-event-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    .event-date {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        flex-shrink: 0;
    }

        .event-date .day {
            font-size: 1.5rem;
            font-weight: bold;
            line-height: 1;
        }

        .event-date .month {
            font-size: 0.8rem;
            opacity: 0.9;
        }

    .event-details {
        flex: 1;
    }

    .event-status {
        margin-left: 10px;
    }

    .bg-primary {
        background-color: var(--primary-color) !important;
    }

    .bg-success {
        background-color: var(--success-color) !important;
    }

    .bg-warning {
        background-color: #FFA500 !important;
    }

    .bg-info {
        background-color: #17a2b8 !important;
    }
</style>


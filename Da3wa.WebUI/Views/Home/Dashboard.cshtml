@model Da3wa.WebUI.Models.DashboardViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0">Dashboard</h4>
                <p class="text-muted mb-0">Welcome to your event management dashboard</p>
            </div>
            <div class="d-flex gap-2">
                <a href="@Url.Action("Create", "Event")" class="btn btn-admin">
                    <i class="fas fa-calendar-plus me-2"></i>Create Event
                </a>
                <a href="@Url.Action("Create", "Auth")" class="btn btn-outline-admin">
                    <i class="fas fa-user-plus me-2"></i>Create User
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards Row 1 -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card" style="border-left-color: #667eea;">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Total Events</h6>
                    <h3 class="mb-0">@Model.TotalEvents</h3>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #667eea, #764ba2);">
                    <i class="fas fa-calendar-alt"></i>
                </div>
            </div>
            <p class="@(Model.EventsThisMonth > 0 ? "text-success" : "text-muted") mb-0 mt-2">
                <i class="fas fa-arrow-up"></i>
                <small>@(Model.EventsThisMonth > 0 ? $"+{Model.EventsThisMonth}" : "0") this month</small>
            </p>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card" style="border-left-color: #10b981;">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Total Guests</h6>
                    <h3 class="mb-0">@Model.TotalGuests.ToString("N0")</h3>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
                    <i class="fas fa-users"></i>
                </div>
            </div>
            <p class="@(Model.GuestsThisWeek > 0 ? "text-success" : "text-muted") mb-0 mt-2">
                <i class="fas fa-arrow-up"></i>
                <small>@(Model.GuestsThisWeek > 0 ? $"+{Model.GuestsThisWeek}" : "0") this week</small>
            </p>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card" style="border-left-color: #f59e0b;">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Confirmed RSVPs</h6>
                    <h3 class="mb-0">@Model.ConfirmedRSVPs</h3>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>
            <p class="@(Model.PendingRSVPs > 0 ? "text-danger" : "text-success") mb-0 mt-2">
                <i class="fas @(Model.PendingRSVPs > 0 ? "fa-exclamation-circle" : "fa-check")"></i>
                <small>@Model.PendingRSVPs pending</small>
            </p>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card" style="border-left-color: #3b82f6;">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Attendance Today</h6>
                    <h3 class="mb-0">@Model.AttendanceToday</h3>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">
                    <i class="fas fa-user-check"></i>
                </div>
            </div>
            <p class="text-muted mb-0 mt-2">
                <i class="fas fa-users"></i>
                <small>@Model.TotalAttendance total confirmed</small>
            </p>
        </div>
    </div>
</div>

<!-- Stats Cards Row 2 -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card" style="border-left-color: #8b5cf6;">

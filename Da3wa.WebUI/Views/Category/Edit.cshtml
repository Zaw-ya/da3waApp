@model Da3wa.Domain.Entities.Category
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit Category";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0">Edit Category</h4>
                <p class="text-muted mb-0">Modify category details</p>
            </div>
            <a href="@Url.Action("Index", "Category")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="card-title mb-0">Category Information</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedOn" />
                    <input type="hidden" asp-for="IsDeleted" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Category Name <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-admin">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a href="@Url.Action("Index", "Category")" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Guest";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0">Delete Guest</h4>
                <p class="text-muted mb-0">Confirm deletion of guest</p>
            </div>
            <a href="@Url.Action("Index", "Guest")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
</div>

<!-- Delete Confirmation -->
<div class="row">
    <div class="col-12">
        <div class="admin-card">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <p class="text-danger mb-4">
                    Are you sure you want to delete this guest? This action cannot be undone.
                </p>

                <dl class="row">
                    <dt class="col-sm-3">Full Name</dt>
                    <dd class="col-sm-9">@Model.FullName</dd>

                    <dt class="col-sm-3">Event</dt>
                    <dd class="col-sm-9">@(Model.Event?.Name ?? "N/A")</dd>

                    <dt class="col-sm-3">Family Number</dt>
                    <dd class="col-sm-9">@Model.FamilyNumber</dd>

                    <dt class="col-sm-3">Is Attending</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsAttending)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">No</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Phone Numbers</dt>
                    <dd class="col-sm-9">
                        @if (Model.Tel != null && Model.Tel.Any())
                        {
                            <ul class="list-unstyled">
                                @foreach (var tel in Model.Tel)
                                {
                                    <li><i class="fas fa-phone me-2"></i>@tel</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">No phone numbers</span>
                        }
                    </dd>
                </dl>

                <div class="d-flex justify-content-end mt-4">
                    <a href="@Url.Action("Index", "Guest")" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <form method="post" action="@Url.Action("DeleteConfirmed", "Guest")" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Guest
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

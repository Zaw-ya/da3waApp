@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Guests";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0">Guests</h4>
                <p class="text-muted mb-0">Manage guests in the system</p>
            </div>
            <div>
                <a href="@Url.Action("ImportVcf", "Guest")" class="btn btn-outline-primary me-2">
                    <i class="fas fa-file-upload me-2"></i>Import from VCF
                </a>
                <a href="@Url.Action("Create", "Guest")" class="btn btn-admin">
                    <i class="fas fa-plus me-2"></i>Add Guest
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Guests Table -->
<div class="row">
    <div class="col-12">
        <div class="admin-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Guests List</h5>
                <div class="ms-auto" style="min-width: 250px;">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" id="guestSearch" class="form-control border-start-0 ps-0" placeholder="Search guests...">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="guestTable">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Event</th>
                                <th>Phone Numbers</th>
                                <th>Family Number</th>
                                <th>Attending</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var guest in Model)
                            {
                                <tr>
                                    <td>@guest.FullName</td>
                                    <td>@(guest.Event?.Name ?? "N/A")</td>
                                    <td>
                                        @if (guest.Tel != null)
                                        {
                                            <span>@guest.Tel.Count phone(s)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">None</span>
                                        }
                                    </td>
                                    <td>@guest.FamilyNumber</td>
                                    <td>
                                        @if (guest.IsAttending)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">No</span>
                                        }
                                    </td>
                                    <td>
                                        @if (guest.IsDeleted)
                                        {
                                            <span class="badge bg-danger">Deleted</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", "Guest", new { id = guest.Id })" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Guest", new { id = guest.Id })" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            @if (!guest.IsDeleted)
                                            {
                                                <form method="post" action="@Url.Action("DeleteConfirmed", "Guest")" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@guest.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-warning" onclick="return confirm('Are you sure you want to toggle delete this guest?')">
                                                        <i class="fas fa-toggle-off"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form method="post" action="@Url.Action("DeleteConfirmed", "Guest")" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@guest.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-success" onclick="return confirm('Are you sure you want to restore this guest?')">
                                                        <i class="fas fa-toggle-on"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $("#guestSearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#guestTable tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}

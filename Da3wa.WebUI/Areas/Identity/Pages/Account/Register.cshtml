@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-page bg-light-section">
    <div class="container py-5">
        <div class="row justify-content-center align-items-center min-vh-80">
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="row g-0">
                        <!-- Left Side - Image & Benefits -->
                        <div class="col-lg-6 bg-coffee d-none d-lg-flex flex-column justify-content-center p-5 text-white">
                            <div class="text-center mb-5">
                                <h2 class="fw-bold mb-3">Start Your Event Journey</h2>
                                <p class="opacity-75">Create amazing events with our powerful platform</p>
                            </div>

                            <div class="benefits mb-5">
                                <div class="d-flex align-items-center mb-4">
                                    <div class="rounded-circle bg-white  text-muted text-white p-3 me-4">
                                        <i class="fas fa-gem fa-lg"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold">Premium Templates</h5>
                                        <p class="opacity-75 mb-0">Access hundreds of customizable invitation designs</p>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center mb-4">
                                    <div class="rounded-circle bg-white  text-muted text-white p-3 me-4">
                                        <i class="fas fa-chart-line fa-lg"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold">Analytics Dashboard</h5>
                                        <p class="opacity-75 mb-0">Track RSVPs and guest engagement in real-time</p>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-white  text-muted text-white p-3 me-4">
                                        <i class="fas fa-headset fa-lg"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold">24/7 Support</h5>
                                        <p class="opacity-75 mb-0">Get help from our dedicated customer service team</p>
                                    </div>
                                </div>
                            </div>

                            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                            {
                                <div class="social-signup">
                                    <div class="text-center mb-3">
                                        <span class="opacity-75">Or sign up with</span>
                                    </div>
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                        <div class="d-flex gap-2 justify-content-center">
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit" class="btn btn-outline-light btn-sm" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">
                                                    <i class="fab fa-@provider.DisplayName.ToLower()"></i>
                                                </button>
                                            }
                                        </div>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <div class="text-center opacity-75">
                                    <p>Free trial available - no credit card required</p>
                                    <small>First 3 events free</small>
                                </div>
                            }
                        </div>

                        <!-- Right Side - Registration Form -->
                        <div class="col-lg-6 p-5">
                            <div class="text-center mb-4">
                                <a class="navbar-brand mb-3" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-calendar-alt"></i> Event<span>Pro</span>
                                </a>
                                <h2 class="fw-bold  text-muted text-white">Create Account</h2>
                                <p class="text-muted">Join our community of event organizers</p>
                            </div>

                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <div class="mb-4">
                                    <label asp-for="Input.Email" class="form-label fw-semibold">Email Address</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-envelope text-muted"></i>
                                        </span>
                                        <input asp-for="Input.Email" class="form-control py-3 border-start-0"
                                               autocomplete="username" aria-required="true"
                                               placeholder="Enter your email">
                                    </div>
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Input.Password" class="form-label fw-semibold">Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-lock text-muted"></i>
                                        </span>
                                        <input asp-for="Input.Password" class="form-control py-3 border-start-0"
                                               autocomplete="new-password" aria-required="true"
                                               placeholder="Create a password" id="passwordInput">
                                        <span class="input-group-text bg-light border-start-0 cursor-pointer"
                                              onclick="togglePassword('passwordInput', 'passwordIcon')">
                                            <i class="fas fa-eye text-muted" id="passwordIcon"></i>
                                        </span>
                                    </div>
                                    <small class="text-muted d-block mt-1">
                                        Must be at least 6 characters with uppercase, lowercase, and numbers
                                    </small>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">Confirm Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-lock text-muted"></i>
                                        </span>
                                        <input asp-for="Input.ConfirmPassword" class="form-control py-3 border-start-0"
                                               autocomplete="new-password" aria-required="true"
                                               placeholder="Confirm your password" id="confirmPasswordInput">
                                        <span class="input-group-text bg-light border-start-0 cursor-pointer"
                                              onclick="togglePassword('confirmPasswordInput', 'confirmPasswordIcon')">
                                            <i class="fas fa-eye text-muted" id="confirmPasswordIcon"></i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="termsCheck" required>
                                        <label class="form-check-label text-muted" for="termsCheck">
                                            I agree to the <a href="#" class=" text-muted text-white text-decoration-none">Terms of Service</a>
                                            and <a href="#" class=" text-muted text-white text-decoration-none">Privacy Policy</a>
                                        </label>
                                    </div>
                                </div>

                                <button id="registerSubmit" type="submit" class="btn btn-gradient w-100 py-3 mb-3 fw-semibold">
                                    <i class="fas fa-user-plus me-2"></i>Create Account
                                </button>

                                <div class="text-center">
                                    <span class="text-muted">Already have an account?</span>
                                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                                       class="text-decoration-none fw-semibold  text-muted text-white ms-1">
                                        Sign In
                                    </a>
                                </div>
                            </form>

                            <div class="mt-4 pt-3 border-top">
                                <div class="text-center">
                                    <small class="text-muted">
                                        <i class="fas fa-shield-alt me-1"></i>
                                        Your data is protected with 256-bit encryption
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .register-page {
        padding-top: 100px;
        padding-bottom: 60px;
    }

    .benefits .rounded-circle {
        width: 60px;
        height: 60px;
        flex-shrink: 0;
    }

    .social-signup .btn-outline-light {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

        .social-signup .btn-outline-light:hover {
            transform: scale(1.1);
        }

    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .form-check-input:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(139, 115, 85, 0.25);
    }

    @@media (max-width: 992px) {
        .register-page {
            padding-top: 80px;
            padding-bottom: 40px;
        }

        .benefits .rounded-circle {
            width: 50px;
            height: 50px;
            padding: 1rem !important;
        }
    }

    @@media (max-width: 576px) {
        .register-page {
            padding-top: 60px;
            padding-bottom: 30px;
        }

        .p-5 {
            padding: 1.5rem !important;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePassword(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const passwordIcon = document.getElementById(iconId);

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordIcon.classList.remove('fa-eye');
                passwordIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                passwordIcon.classList.remove('fa-eye-slash');
                passwordIcon.classList.add('fa-eye');
            }
        }

        // Password strength indicator
        document.getElementById('passwordInput')?.addEventListener('input', function(e) {
            const password = e.target.value;
            const strengthIndicator = document.getElementById('passwordStrength');

            if (!strengthIndicator) {
                const div = document.createElement('div');
                div.id = 'passwordStrength';
                div.className = 'mt-2';
                e.target.parentElement.parentElement.appendChild(div);
            }

            updatePasswordStrength(password, strengthIndicator || document.getElementById('passwordStrength'));
        });

        function updatePasswordStrength(password, indicator) {
            let strength = 0;
            let message = '';
            let color = 'danger';

            if (password.length >= 6) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/[a-z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[^A-Za-z0-9]/.test(password)) strength++;

            switch(strength) {
                case 0:
                case 1:
                    message = 'Very Weak';
                    color = 'danger';
                    break;
                case 2:
                    message = 'Weak';
                    color = 'warning';
                    break;
                case 3:
                    message = 'Fair';
                    color = 'info';
                    break;
                case 4:
                    message = 'Good';
                    color = 'primary';
                    break;
                case 5:
                    message = 'Strong';
                    color = 'success';
                    break;
            }

            indicator.innerHTML = `
                <div class="progress" style="height: 5px;">
                    <div class="progress-bar bg-${color}" role="progressbar"
                         style="width: ${strength * 20}%" aria-valuenow="${strength * 20}"
                         aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <small class="text-${color}">${message}</small>
            `;
        }
    </script>
}